{
    "version": "2.0",
    "name": "Adjaranet Adblocker",
    "description": "adjaranet.com adblocker",
    "author": "Spartak Phalelashvili",
    "manifest_version": 3,

    "permissions": [
        "declarativeNetRequest",
        "webRequest",
        "storage"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "action": { 
        "default_title": "Adjaranet Adblocker", 
        "default_icon": {
            "19": "icon.png",
            "38": "icon.png"
        },
        "default_popup": "popup.html" 
    },
    
    "icons": { 
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}