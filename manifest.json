{
    "version": "1.0.2",
    "name": "Adjaranet Adblocker",
    "description": "Adblocker for net.adjara.com",
    "manifest_version": 2,

    "permissions": [
        "https://net.adjara.com/",
        "storage"
    ],

    "content_scripts": [{
        "matches": ["https://net.adjara.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
    }],
    "browser_action": { 
        "default_title": "Adjaranet Adblocker", 
        "default_icon": {
            "19": "icon.png",
            "38": "icon.png"
        },
        "default_popup": "popup.html" 
    },
    
    "icons": { 
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },

    "options_page": "popup.html" 
}